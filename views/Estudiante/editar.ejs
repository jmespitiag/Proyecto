<%- include("../header"); %>
<div class="col-12">
    <h1>Editar Estudiante
    <form method="post" action="/Estudiante/actualizar">

        <input value="<%= Estudiante.id_nodo %>" name="id_nodo" type="hidden">
        <div class="form-group">
            <label for="ref_bancaria">ref_bancaria</label>
            <input value="<%= Estudiante.ref_bancaria %>" required id="ref_bancaria" placeholder="Referefcia bancaria del Estudiante"
                class="form-control" type="text" name="ref_bancaria">
        </div>
        <div class="form-group">
            <label for="email">email</label>
            <input value="<%= Estudiante.email %>" required id="email" placeholder="Email del Estudiante"
                class="form-control" type="text" name="email">
        </div>
        <div class="form-group">
            <label for="genero">genero</label>
            <input value="<%= Estudiante.genero %>" required id="genero" placeholder="Genero del Estudiante"
                class="form-control" type="number" name="genero">
        </div>
        <div class="form-group">
            <label for="nombre">nombre</label>
            <input value="<%= Estudiante.nombre %>" required id="nombre" placeholder="Nombre del Estudiante"
                class="form-control" type="text" name="nombre">
        </div>
        <div class="form-group">
            <label for="contraseña">contraseña</label>
            <input value="<%= Estudiante.contraseña %>" required id="contraseña" placeholder="Contraseña del Estudiante"
                class="form-control" type="text" name="contraseña">
        </div>
        <div class="form-group">
            <button class="btn btn-success">Guardar</button>
            &nbsp;<a href="/Estudiante" class="btn btn-primary">Volver</a>
        </div>
    </form>
</div>
<%- include("../footer"); %>