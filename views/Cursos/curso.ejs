<!DOCTYPE html>
<html>
<head>
    <title>Detalles del Curso</title>
</head>
<body>
    <h1>Curso: <%= id_curso %></h1>


    <h2>Profesor/h2></h2>
    <ul>
        <% if (Curso.profesores) {
            Curso.profesores.forEach(function(profesor) { %>
                <li>Nombre: <%= profesor.nombre %>, Email: <%= profesor.email %></li>
            <% });
        } %>
    </ul>

    <h2>Alumnos</h2>
    <ul>
        <% if (Curso.alumnos) {
            Curso.alumnos.forEach(function(alumno) { %>
                <li>Nombre: <%= alumno.nombre %>, Email: <%= alumno.email %></li>
            <% });
        } %>
    </ul>

    <h2>Materiales</h2>
    <ul>
        <% if (Curso.materiales) {
            Curso.materiales.forEach(function(material) { %>
                <li>Título: <%= material.titulo %>, Descripción: <%= material.descripcion %>, Archivo: <%= material.archivo %></li>
            <% });
        } %>
    </ul>

    <h2>Tareas</h2>
    <ul>
        <% if (Curso.tareas) {
            Curso.tareas.forEach(function(tarea) { %>
                <li>Nombre: <%= tarea.nombre %>, Descripción: <%= tarea.descripcion %>, Fecha de entrega: <%= tarea.fecha_e %>, Archivo: <%= tarea.archivo %></li>
            <% });
        } %>
    </ul>

    <h2>Foros</h2>
    <ul>
        <% if (Curso.foros) {
            Curso.foros.forEach(function(foro) { %>
                <li>Nombre: <%= foro.nombre %>, Descripción: <%= foro.descripcion %></li>
            <% });
        } %>
    </ul>

    <a href="/Cursos">Volver a la lista de cursos</a>
</body>
</html>
